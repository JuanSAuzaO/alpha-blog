<h1 class="text-center mt-4">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-info" %>
  </div>
<% end %>

 <% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Delete category", category_path(@category), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?"} %>
  </div>
<% end %> 

<h3 class="text-center mt-4">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

