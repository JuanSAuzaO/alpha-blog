<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-info" %>
  </div>
<% end %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Delete your profile", user_path(@user), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?"} %>
  </div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<% if logged_in? %>
  <div class="row justify-content-md-center mt-4">
    <%= link_to 'Create new article', new_article_path, class:"btn btn-primary", style: "width: 16%; margin-bottom: 20px" %>
  </div>
<% end %>

<%= render 'articles/article' %>

<% if logged_in? %>
  <div class="row justify-content-md-center">
    <%= link_to 'Create new article', new_article_path, class:"btn btn-primary", style: "width: 16%; margin-bottom: 20px" %>
  </div>
<% end %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
